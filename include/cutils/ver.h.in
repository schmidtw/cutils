#ifndef __CUTILS_VERSION_H__
#define __CUTILS_VERSION_H__ 1

#define CUTILS_VERSION "@cutils_VERSION@"

#define CUTILS_VERSION_MAJOR @cutils_VERSION_MAJOR @
#define CUTILS_VERSION_MINOR @cutils_VERSION_MINOR @
#define CUTILS_VERSION_PATCH @cutils_VERSION_PATCH @

/* This is the numeric version of the curtils version number, meant for easier
 * parsing and comparisons by programs.  The CUTILS_VERSION_NUM define
 * will always follow this syntax:
 *
 *      0xAABBCC
 *
 * Where AA, BB, and CC are each major version, minor version, patch in hex
 * using 8 bits each.
 *
 * It should be safe to compare two different versions with the greater number
 * being the newer version.
 */
#define CUTILS_VERSION_NUM @cutils_BITWISE_VERSION @

#endif
